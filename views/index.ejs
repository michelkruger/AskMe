<!DOCTYPE html>
<html>
    <%-include ('./partials/head.ejs')%> 
<body>
    <%-include ('./partials/header.ejs')%> 

    <div class="container">
        <div class="formContainer">
            <h2>Perguntas</h2>
            <a href="/ask"><button class="btnForm">Perguntar</button></a>
                <% questions.forEach(question => { %>
            <div class="question" >
                <p><%=question.title%> </p>
            </div>
            <div>
                <a href="/question/<%= question.id %>"><button class="btnForm">Responder</button></a>
            </div>
            <% }) %>
        </div>
        
    </div>

    <script src='../index.js'></script>
</body>
</html>